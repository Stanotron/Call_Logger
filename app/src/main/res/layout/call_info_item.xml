<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="210dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/phone_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:alpha="0.6"
                android:text="+91-0000000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/state_button"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_textview"
                android:text="@string/incoming"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="13sp"
                app:cornerRadius="5dp"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/date_duration_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/state_button"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:text="Date"
                android:textSize="14sp"
                android:alpha="0.6" />

            <TextView
                android:id="@+id/from_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date_duration_info"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:text="From"
                android:textSize="16sp"
                android:alpha="0.6" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_below="@+id/from_info"
                android:alpha="0.2"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="10dp"
                />

            <TextView
                android:id="@+id/record_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/view"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="20dp"
                android:paddingLeft="8dp"
                android:background="@drawable/orange_button"
                app:drawableStartCompat="@drawable/mic_vector" />

            <TextView
                android:id="@+id/recording_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:layout_toRightOf="@+id/record_icon"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:text=".mp3"
                android:textSize="17sp"
                android:lines="2"
                android:alpha="0.6"
                />

            <TextView
                android:id="@+id/play_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/view"
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bordered_button"
                android:paddingLeft="8dp"
                app:drawableStartCompat="@drawable/play_arrow_vector" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>